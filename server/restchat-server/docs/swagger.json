        "restchat.RequestMessage": {
            "type": "object",
            "properties": {
                "api_token": {
                    "type": "string"
                },
                "text": {
                    "type": "string"
                }
            }
        },
        "restchat.RequestUser": {
            "type": "object",
            "properties": {
                "password": {
